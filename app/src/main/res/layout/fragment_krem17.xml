<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".kremasti.Krem17Fragment"
    android:orientation="vertical"
    android:background="@drawable/background_tockice_tirk">

    <include
        android:id="@+id/actionbar_krem17"
        layout="@layout/actionbar_kremasti" />
    <ScrollView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/border_cardview"
        android:orientation="vertical">

        <ImageView
            android:layout_width="210dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/kremasti17"
            android:id="@+id/imagekrem17"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/LightGray" />

        <TextView
            android:id="@+id/tvTitleBiskvit17krem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/biskvit"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvBiskvit17krem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="4 jaja, 12 žlica šećera, 1 dcl ulja, 1 dcl mlijeka, 2 žlica brašna, 1 prašak za pecivo, 2 žlice kakaa"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvTitleKrema17krem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/krema"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvKrema17krem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="5 dcl mlijeka, 3 žlice brašna, 10 dkg kokosovog brašna, 10 žlica šećera"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvTitlePriprema17krem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/priprema"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/tvPriprema17krem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Za tijesto – pjenasto umutiti jaja i šećer, postepeno dodavati ulje, mlijeko i brašno s praškom za pecivo. Podijeliti u dva dijela, u jednu polovicu dodati kakao, uliti u kalup i tijesto malo zapeći. Polupećeno tijesto premazati pripremljenom kremom i izliti ostatak žutog biskvita. Kolač dokraja ispeći.
Postupak kreme – u mlijeko ukuhati brašno, šećer i kokosovo brašno, kremu kratko kuhati i vruću preliti na polupečeni biskvit. Pećeni kolač ukrasiti čokoladnom glazurom ili posipati kokosovim brašnom."
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:layout_marginBottom="10dp"/>

    </LinearLayout>
    </ScrollView>
</LinearLayout>
