<?xml version="1.0" encoding="utf-8"?>



<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".kremasti.Krem6Fragment"
    android:orientation="vertical"
    android:background="@drawable/background_tockice_tirk">

    <include
        android:id="@+id/actionbar_krem6"
        layout="@layout/actionbar_kremasti" />
    <ScrollView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:fillViewport="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/border_cardview"
        android:orientation="vertical"
        android:layout_marginBottom="10dp">

        <ImageView
            android:layout_width="210dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:src="@drawable/kremasti6"
            android:layout_marginBottom="15dp"
            android:id="@+id/imagekrem6"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/LightGray"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>

        <TextView
            android:id="@+id/tvTitleBiskvit6krem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/biskvit"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvBiskvit6krem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="4 jaja, 200 g šećera, 200 g glatkog brašna, 1 žličica praška za pecivo, 140 ml mlijeka, 120 ml ulja"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvTitleNadjev6krem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/nadjev"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvNadjev6krem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="600 ml mlijeka, 100 g šećera, 2 vanilin šećera, 2 praška za puding s okusom vanilije. 150 g maslaca"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvTitlePriprema6krem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/priprema"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/tvPriprema6krem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jaja pjenasto izmiksajte sa šećerom, 2-3 minute. Naizmjenično dodajte brašno pomiješano s praškom ta pecivo, ulje i mlijeko i sve dobro izmiksajte. Biskvit izlijte u kalup za pečenje (20x30 cm) obložen masnim papirom. Smjesu stavite u pećnicu zagrijanu na 180 °.
Ukuhjte kremu kao puding, u hladno dodajte maslac, razradite i kreirajte slasticu prema vlastitoj ideji, ovdje je rezano kalupom i ukrašavano pojedinačno."
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:layout_marginBottom="10dp"/>


    </LinearLayout>
    </ScrollView>

</LinearLayout>
