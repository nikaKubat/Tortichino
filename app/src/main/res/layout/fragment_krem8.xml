<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".kremasti.Krem8Fragment"
    android:orientation="vertical"
    android:background="@drawable/background_tockice_tirk">

    <include
        android:id="@+id/actionbar_krem8"
        layout="@layout/actionbar_kremasti" />
    <ScrollView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:fillViewport="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/border_cardview"
        android:orientation="vertical"
        android:layout_marginBottom="10dp">

        <ImageView
            android:layout_width="210dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:src="@drawable/kremasti8"
            android:layout_marginBottom="15dp"
            android:id="@+id/imagekrem8"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/LightGray"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>

        <TextView
            android:id="@+id/tvTitleKrema8krem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/krema"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvKrema8krem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="6 žutanjaka, 20 dkg šećera, 2 pudinga vanilija, 2 vanili šećera, 7 dcl mlijeka, 10 dkg rastopljene čokolade, petit keksi, 1 margarin"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvTitleBiskvit8krem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/biskvit"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvBiskvit8krem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="6 bjelanjaka, 15 dkg šećera, 2 žlice prezla, 2 žlice brašna, 15 dkg oraha"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvTitlePriprema8krem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/priprema"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/tvPriprema8krem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Istući bjelanjke, dodati šećer, pred kraj lagano umješati brašno, prezle i orahe. Peći na 175°c. dok neporumeni. Žutanjke izmiksane sa šećerom i vanili šećerom i pudingom vanilije ukuhati u mlijeko i skuhati u kremu. Podijeli na dva dijela, u jedan dio stavi rastopljenu čokoladu, prije čokolade u hladno stavi 1 matgarin.
Kolač se slaže redom: biskvit – žuta fila – petit keksi – smeđa fila i na kraju čokoladna glazura."
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:layout_marginBottom="10dp"/>

    </LinearLayout>
    </ScrollView>

</LinearLayout>
