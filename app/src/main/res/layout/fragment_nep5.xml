<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".nepeceni.Nep5Fragment"
    android:orientation="vertical"
    android:background="@drawable/background_tockice_zelene">

    <include
        android:id="@+id/actionbar_nep5"
        layout="@layout/actionbar_nep" />
    <ScrollView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/border_cardview"
        android:orientation="vertical">

        <ImageView
            android:layout_width="210dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/nepeceni5" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/LightGray" />

        <TextView
            android:id="@+id/tvTitleSastojci5nep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/sastojci"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvSastojci5nep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0.5 l mlijeka,, 8 žlica brašna, 7 žlica šećera, 2 vanilin šećera, 250 g margarina, 250 dkg šećera u prahu, 20 dkg kokosovog brašna, čokolada za kuhanje (ili bilo koja mliječna ili bijela čokolada)"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvTitlePriprema5nep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/priprema"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/tvPriprema5nep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mlijeko, brašno, šećer i vanilin šećer kuhati dok se ne zgusne. Ohladiti i u to dodati margarin, šećer u prahu i kokosovo brašno. Dobro promiješati mikserom i ostaviti hladiti 2 sata u hladnjaku. Uzeti malu količinu, utisnuti badem (oljušten i malo popržen) oblikovati kuglicu i uvaljati ju u kokosovo brašno. Na pari otopiti čokoladu.
Papirnate košarice premazati čokoladom i staviti u hladnjak da se s tvrdnu (radi čvrstoće premazati dva puta). Kad se čokolada dobro stvrdne lagamo skinuti papirnatu košaricu."
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:layout_marginBottom="10dp"/>

    </LinearLayout>

    </ScrollView>
</LinearLayout>
