<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sitni.Sitni6Fragment"
    android:orientation="vertical"
    android:background="@drawable/background_tockice_roze">

    <include
        android:id="@+id/actionbar_sitni6"
        layout="@layout/actionbar_sitni" />
    <ScrollView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/border_cardview"
        android:orientation="vertical">

        <ImageView
            android:layout_width="210dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/sitni6" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/LightGray" />

        <TextView
            android:id="@+id/tvTitleSastojci6sit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/sastojci"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvSastojci6sit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2 jaja, 25 dkg šećera u prahu, 25 dkg gustina, 25 dkg margarina, 60 – 70 dkg brašna, korica od 1 limuna, 1 prašak za pecivo, malo mješavine za maffine ili cimet, malo kakaa"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvTitlePriprema6sit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/priprema"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/tvPriprema6sit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Margarin i šećer zajedno dobro izmješajte u glatku smjesu. Dodajte jaja i miksajte još malo te dodajte koricu od limuna i začine za maffine ili cimet. Gustin , brašno i prašak za pecivo pomiješaj zajedno i sve mjesiti rukama da dobijete lijepo i glatko tijesto koje se treba odvajati od ruku, a da neostaje ništa na njima. Neka tijesto odstoji 2 sata u hladnjaku. Zatim pravi kuglice veličine oraha. Zatim uzmi čep ili ljevak i namoći ga u kakao, pa stisni u kuglicu da dobiješ peteljke. Peci ih 12 – 15 minuta, moraju ostati svijetle boje."
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:layout_marginBottom="10dp"/>

    </LinearLayout>
    </ScrollView>
</LinearLayout>
