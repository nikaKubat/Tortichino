<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sitni.Sitni9Fragment"
    android:orientation="vertical"
    android:background="@drawable/background_tockice_roze">

    <include
        android:id="@+id/actionbar_sitni9"
        layout="@layout/actionbar_sitni" />
    <ScrollView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/border_cardview"
        android:orientation="vertical">

        <ImageView
            android:layout_width="210dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/sitni9" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/LightGray" />

        <TextView
            android:id="@+id/tvTitleSastojci9sit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/sastojci"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvSastojci9sit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="100 g zobenih pahuljica, 100 g pšenićnih pahuljica, 100 g lješnjaka, 150 g suhog voća, 150 g šećera ( plus još dodatno 2 – 3 žlice), 1 – 2 žlice meda, 200 g integralnog pšenićnog brašna, 150 g maslaca, pola praška za pecivo,"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvTitlePriprema9sit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/priprema"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/tvPriprema9sit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="U blenderu usitniti posebno zob, posebno pšenicu, posebno lješnjake. Suho voće izrežite na sitne komadiće. Zatim treba karmelizirati pšenicu: u manji lonac stavite 2 – 3 žlice šećera, mješajte dok se šećer ne otopi, kad se otopio dodajte med i promiješajte te dodajte pšenicu i mješajte sve skupa još kratko, zatim maknite sa vatre i pustite da se ohladi. Kad se ohladilo trebate još kratko usitniti u blenderu. U posudi izmiješajte: integralno brašno, usitnjene zobene pahuljice, usitnjene lješnjake, usitnjenu karmeliziranu pšenicu, narezano suho voće, 150 g šećera, maslac, prašak za pecivo, sol i mlijeko te zamijesite. Trebate dobiti glatko tijesto koje se nelijepi za ruke, a zatim ga stavite u frižider na 15 minuta. Razvaljajte ga na pobrašnjenoj površini na debljinu 0.5 – 1 cm, izrezujte oblike po želji. Peći na 170°C 15 min."
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:layout_marginBottom="10dp"/>

    </LinearLayout>
    </ScrollView>
</LinearLayout>
