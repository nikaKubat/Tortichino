<?xml version="1.0" encoding="utf-8"?>



<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tradicionalni.Trad17Fragment"
    android:orientation="vertical"
    android:background="@drawable/background_tockice_crvene">

    <include
        android:id="@+id/actionbar_trad17"
        layout="@layout/actionbar_tradicionalni" />
    <ScrollView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:fillViewport="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/border_cardview"
        android:orientation="vertical">

        <ImageView
            android:layout_width="210dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/trad17" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/LightGray" />

        <TextView
            android:id="@+id/tvTitleSastojci17trad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/sastojci"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvSastojci17trad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1 pakiranje kora za savijaču. 750 g plavih šljiva ( ili 1 kg), 2 jaja, 2 čaše jogurta, 2 čaše šećera, 1.5 čaše griza, 1 čaša ulja, 1 prašak za pecivo, 1 vanilin šećer"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/tvTitlePriprema17trad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/priprema"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/tvPriprema17trad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Korak 1: Umutiti mikserom jaja, šećer, prašak za pecivo i vanilin šećer. Polako dodati jogurt, ulje,griz i sve miješati u glatku smjesu.
Korak 2: Prvu koru premazti smjesom iz koraka 1, preko nje staviti drugu koru pa opet premazati. Na jedan rub poredati šljive koje ste prethodno izrezali na kockice. Zarolati u roladu.
Korak 3: Tako nastaviti dok imate kora, šljiva i smjese. Sve složiti u tepsiju za pečenje. Premazati ostatkom smjese (ako ostane) ili otopljenim maslacem. Peći na 180° 40-ak min dok površina ne poprimi zlatnu boju.
Korak 4: Ohlađenu štrudlu popite šećerom u prahu."
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:layout_marginBottom="10dp"/>

    </LinearLayout>
    </ScrollView>
</LinearLayout>
