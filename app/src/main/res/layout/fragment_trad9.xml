<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tradicionalni.Trad9Fragment"
    android:orientation="vertical"
    android:background="@drawable/background_tockice_crvene">

    <include
        android:id="@+id/actionbar_trad9"
        layout="@layout/actionbar_tradicionalni" />
    <ScrollView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/border_cardview"
        android:orientation="vertical">

        <ImageView
            android:layout_width="210dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/trad9" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/LightGray" />

        <TextView
            android:id="@+id/tvTitleBiskvit9trad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/biskvit"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvBiskvit9trad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="½ svježe germe, 30 dkg brašna ( pola oštro, pola glatko), ½ dcl ulja, 1 dcl mlijeka, 2 žlice šećera, 1 žlica brašna, malo soli"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <TextView
        android:id="@+id/tvTitleFila9trad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/fila"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

        <TextView
            android:id="@+id/tvFila9trad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1 kg domaćih neprskanih jabuka, 1 šaka mljevenih oraha, malo cimeta, 10 dkg šećera"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvTitlePosip9trad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/posip"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvPosip9trad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2 žlice masti ili 5 dkg margarina, 3 žlice šećera, 2 žlice brašna"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvTitlePriprema9trad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/priprema"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/tvPriprema9trad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Germu razmočimo u toplom mlijeku dodamo malo šećera i malo brašna i soli. Kad se germa digne zamjesimo dizano tijesto s uljem, mlijekom i brašnom. Kad se tijesto digne razvaljamo ga u veću plitku tepsiju i stavimo filu. .. Jabuke ogulimo i naribamo, dodamo šaku oraha, malo cimeta i šećera i posložimo na dizano tijesto.posip napravimo tako da brašno, šećer i mast razmrvimo rukama i posipamo po jabukama. Peće se na 220°c. dok kolač neporumeni. Kolač režemo na kocke ili trokute."
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:layout_marginBottom="10dp"/>

    </LinearLayout>

    </ScrollView>
</LinearLayout>
